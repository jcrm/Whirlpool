<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenubg" >

    
    <ImageButton
        android:id="@+id/game"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/playbtn"
        android:scaleType="fitCenter"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
    	android:contentDescription="@string/start_game"
    />

    <ImageButton
        android:id="@+id/options"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/optionsbtn"
        android:scaleType="fitCenter"
        android:layout_below="@id/game"
        android:contentDescription="@string/options_screen"
    />
    
        
    <ImageButton
        android:id="@+id/exit"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/exitbtn"
        android:scaleType="fitCenter"
        android:layout_below="@id/options"
        android:contentDescription="@string/exit"
    />


</RelativeLayout>