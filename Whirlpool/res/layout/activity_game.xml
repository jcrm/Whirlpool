<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/root" >
    
    
    <com.sinkingduckstudios.whirlpool.views.GameView
	    android:id="@+id/gameview"
	    android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
	</com.sinkingduckstudios.whirlpool.views.GameView>
    

    
	<RelativeLayout
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
	    >
	    
	    
	    
		<ImageButton
	        android:id="@+id/menubutton"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:background="@drawable/back_button"
	        android:scaleType="fitCenter" />

	    <TextView
	        android:id="@+id/time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/menubutton" />

	    <ImageButton
	        android:id="@+id/pausebutton"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/back_button"
	        android:scaleType="fitCenter" />

	    <ImageView
	        android:id="@+id/pausebg"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:src="@drawable/pause_bg"
	        android:visibility="invisible" />

	    <ImageButton
	        android:id="@+id/unpausebutton"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/back_button"
	        android:scaleType="fitCenter"
	        android:visibility="invisible"
	         />

	    <ImageButton
	        android:id="@+id/quit"
	        android:layout_width="200dp"
	        android:layout_height="100dp"
	        android:layout_below="@+id/restart"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/quit_button"
	        android:scaleType="fitCenter"
	        android:visibility="invisible" />

	    <ImageButton
	        android:id="@+id/restart"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_alignRight="@+id/quit"
	        android:layout_alignTop="@+id/volume"
	        android:background="@drawable/restart_button"
	        android:scaleType="fitCenter"
	        android:visibility="invisible" />

	    <ImageButton
	        android:id="@+id/volume_off"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_above="@+id/quit"
	        android:layout_toLeftOf="@+id/restart"
	        android:background="@drawable/volume_off_button"
	        android:scaleType="fitCenter"
	        android:visibility="invisible" />

	    <ImageButton
	        android:id="@+id/volume_on"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_above="@+id/quit"
	        android:layout_toLeftOf="@+id/restart"
	        android:background="@drawable/volume_on_button"
	        android:scaleType="fitCenter"
	        android:visibility="invisible" />
	    
    </RelativeLayout>

</RelativeLayout>
