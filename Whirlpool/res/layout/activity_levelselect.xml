<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <com.sinkingduckstudios.whirlpool.views.LevelSelectView
	    android:id="@+id/levelSelectView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
	</com.sinkingduckstudios.whirlpool.views.LevelSelectView>
    
    
   <ImageButton
        android:id="@+id/op_return"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_button"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/level1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/level_one_button"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/level2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/level_two_button"
        android:layout_marginLeft="70dp"
        android:scaleType="fitCenter" />
    <ImageButton
        android:id="@+id/level3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="140dp"
        android:background="@drawable/level_three_button"
        android:scaleType="fitCenter" />
    <ImageButton
        android:id="@+id/level4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="210dp"
        android:background="@drawable/level_four_button"
        android:scaleType="fitCenter" />
    <ImageButton
        android:id="@+id/level5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="280dp"
        android:background="@drawable/level_five_button"
        android:scaleType="fitCenter" />
    <ImageButton
        android:id="@+id/level6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="350dp"
        android:background="@drawable/level_six_button"
        android:scaleType="fitCenter" />

</RelativeLayout>